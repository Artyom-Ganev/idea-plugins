<idea-plugin version="2">
    <id>drools-idea-plugin</id>
    <name>Drools plugin for Intellij IDEA</name>
    <version>1.0-SNAPSHOT</version>
    <vendor email="a.a.ganev@gmail.com">Artyom Ganev</vendor>

    <description>
        <!--[CDATA[]]-->
    </description>

    <change-notes>
        <!--[CDATA[]]-->
    </change-notes>

    <idea-version since-build="163"/>
    <resource-bundle>resources.messages.DrlBundle</resource-bundle>

    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileTypeFactory implementation="ru.ganev.plugins.drools.DrlFileTypeFactory"/>
        <lang.syntaxHighlighterFactory language="Drools" implementationClass="ru.ganev.plugins.drools.highlight.DrlSyntaxHighlighterFactory"/>
        <lang.parserDefinition language="Drools" implementationClass="ru.ganev.plugins.drools.parsing.DrlParserDefinition"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>

</idea-plugin>